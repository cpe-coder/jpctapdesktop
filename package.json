{
	"name": "jpc-tap-desktop",
	"version": "0.1.0",
	"main": "main.js",
	"description": "JPC Tap Desktop",
	"author": "JPC-tap",
	"license": "MIT",
	"devDependencies": {
		"electron": "^27.1.3",
		"electron-builder": "^24.13.3",
		"tailwindcss": "^3.4.1"
	},
	"scripts": {
		"start": "electron .",
		"build": "electron-builder"
	},
	"build": {
		"appId": "com.jpc.tap.desktop",
		"productName": "JPC Tap Desktop",
		"win": {
			"target": [
				"nsis"
			],
			"icon": "icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"installerIcon": "icon.ico",
			"uninstallerIcon": "icon.ico",
			"uninstallDisplayName": "uninstall_jpc_tap_desktop",
			"license": "LICENSE.md",
			"perMachine": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true
		}
	},
	"dependencies": {
		"electron-is-dev": "^2.0.0",
		"quagga": "^0.6.16"
	}
}
